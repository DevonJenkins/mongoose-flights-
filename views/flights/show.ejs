<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
      <div><%= flight.airline %></div>
      <div><%= flight.airport %></div>
      <div><%= flight.flightNo %></div>
      <div><%= flight.departureDate %></div>
      <div><%= flight.departureTime %></div>
      <div><%= flight.flightRisk%></div>
      <div><%= flight.destination %></div>
      <div><%= flight.onTime ? 'yep' : 'nope' %></div>
<%# start meal list %>
<div>Meals:</div>
<ul>
  <% flight.meals.forEach(meal => { %>
    <li><%= meal.name %> </li>
    </ul>
  <%});%>
<%# end meal list %> 

</section>

<%# add to meal form below this comment %> 


<h2>Tickets</h2>
<form 
  id="add-Ticket-form"
  action="/flights/<%= flight._id %>/tickets"
  method="POST"
>
  <label for="name-input">Ticket Holder:
  </label>
  <input name="name" id="name-input" placeholder="First-Name Last-Name"></input>
  <label for="seat-select">Seat:
  </label>
  <input name="seat" required pattern="[A-F][1-9]\d?" placeholder="A-F 1-99">
  <button type="submit">Add Ticket</button>
</form>

<% if (flight.tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Seat</th>
      </tr>
    </thead>
    <tbody>
      <% flight.tickets.forEach(function(ticket) { %>
        <tr>
          <td><%= ticket.createdAt.toLocaleDateString() %></td>
          <td><%= ticket.name %></td>
          <td><%= ticket.seat %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <h3>No Tickets Yet</h3>
<% } %>



<form id="add-per-to-meal" action="/flights/<%= flight._id %>/meals" method="POST">
  <select name="mealId">
    <% meals.forEach(meal => { %>
      <option value="<%= meal._id %>"><%= meal.name %></option>
    <% }) %>
  </select>
  <button type="submit">Add to Menu</button>
</form>


</main>
  
<%- include('../partials/footer') %>